      "ami_regions": [
        "{{user `aws_region`}}"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "/var/tmp/chef.rpm",
      "destination": "/var/tmp/chef.rpm"
    },
    {
      "type": "shell",
      "script": "{{user `install_script`}}"
    } 
